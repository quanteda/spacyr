PYVER = $(shell "python" -c "import sys;print(str(sys.version_info[0]) + str(sys.version_info[1]))")
PKG_CXXFLAGS=-I"$(PYTHON)\include" -I"$(PYTHON)\PCBuild" -DMS_WIN64
PKG_LIBS= -L"$(PYTHON)\libs" -lpython$(PYVER) -DMS_WIN64

